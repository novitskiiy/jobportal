# JobPortal Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27018/jobportal

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=86400000

# AI Service Configuration
# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com

# Ollama Configuration (default - runs locally)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=llama2

# Hugging Face Configuration (free tier - 30,000 requests/month)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# AI Service Settings
AI_JOB_DESCRIPTION_ENABLED=true
AI_JOB_DESCRIPTION_MAX_LENGTH=2000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=jobportal-group

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TIMEOUT=5000ms

# Application Settings
SPRING_PROFILES_ACTIVE=dev
