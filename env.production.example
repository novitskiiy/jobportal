# JobPortal Production Environment Configuration
# Copy this file to .env and update with your actual production values

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/jobportal

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-production-email@gmail.com
EMAIL_PASSWORD=your-production-app-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRATION=3600000

# Frontend Configuration
REACT_APP_API_URL=http://your-domain.com:8080
REACT_APP_WS_URL=ws://your-domain.com:8080

# AI Service Configuration
# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com

# Ollama Configuration (if using local AI)
OLLAMA_BASE_URL=http://your-ollama-server:11434
OLLAMA_CHAT_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=llama2

# Hugging Face Configuration (free tier - 30,000 requests/month)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# AI Service Settings
AI_JOB_DESCRIPTION_ENABLED=true
AI_JOB_DESCRIPTION_MAX_LENGTH=2000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=jobportal-group

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TIMEOUT=5000ms

# Application Settings
SPRING_PROFILES_ACTIVE=prod

# Logging Levels
LOG_LEVEL_SPRING=WARN
LOG_LEVEL_APP=INFO
LOG_LEVEL_MONGO=WARN
LOG_LEVEL_SECURITY=WARN

# Swagger (disabled in production)
SWAGGER_ENABLED=false
